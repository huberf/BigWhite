<style type='text/css'>
.big-white {
  font-size: 120px;
  font-weight: bold;
  height: 2em;
  width: 100%;
  height: 100%;
  padding: 10px;
  color: rgb(100, 100, 100);
}
</style>
<textarea type='text' id='big-white' class='big-white' placeholder='Start typing...'></textarea>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script src='/socket.io/socket.io.js'></script>
<script type-'text/javascript'>
var socket = io();
var id = 0;
socket.on('new', function(data) {
  if (id == 0 ) {
    id = data[0];
    $('#big-white').val(data[1]);
  }
});

socket.on('text update', function(msg) {
  console.log(msg);
  if (msg[0] != id) {
    $('#big-white').val(msg[1]);
  }
});
var text = [0, ""];
console.log("Initializing...");

$('#big-white').bind("keyup paste", function(e){
    if ( ($(this).val() != text ) && (id != 0) )
    {
        console.log('Hello world!');
        // text changed
        text[1] = $(this).val();
        text[0] = id;
        socket.emit('update text', text);
    }    
});
</script>
